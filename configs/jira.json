{
  "name": "jira",
  "type": "api",
  "base_path": "/rest/api/3/",
  "paging": {
    "location": "response",
    "link_key": "_links.next"
  },
  "auth": {
    "type": "basic"
  },
  "source": {
    "issues": {
      "data_key": "projects",
      "target": "projects",
      "endpoints": {
        "index": {
          "path": "search"
        },
        "get": {
          "path": "issue/{key}"
        }
      },
      "mapping": {
        "id": "source_id",
        "name": "name"
      },
      "limit": {
        "type": "count",
        "value": "1000"
      }
    },
    "attachments": {
      "data_key": "",
      "target": "attachments",
      "endpoints": {
        "index": {
        },
        "get": {
          "path": "attachment/{id}",
          "bin_path": "attachment/content/{id}"
        }
      },
      "mapping": {
        "id": "source_id"
      },
      "limit": {
        "type": "count",
        "value": "1000"
      }
    }
  },
  "target": {
    "issues": {
      "target": "issues",
      "endpoints": {
        "create": {
          "single_path": "issue",
          "required": ["key"]
        },
        "update": {
          "path": "issue/{key}",
          "required": ["key"],
          "update_key": "key",
          "method": "PUT"
        }
      }
    },
    "attachments": {
      "target": "attachments",
      "endpoints": {
        "create": {
          "single_path": "issue/{key}/attachments",
          "required": ["key", "filepath"]
          "payload_key": "filepath"
        }
      },
      "limit": {
        "type": "count",
        "value": "1000"
      }
    }
  }
}
